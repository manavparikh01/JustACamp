<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css"> 

<div class="row">
<div class="col-6">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% camp.images.forEach((img, i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
        <img src="<%= img.url %>" class="d-block w-100" alt="">
      </div>
      <% }) %>
    </div>
      <% if (camp.images.length > 1) { %>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
    <% } %>
  </div>
    <div class="card mb-3">
      
        
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted"><%= camp.location %></li>
          <li class="list-group-item">Submitted by <%= camp.author.username %></li>
          <li class="list-group-item">&#8377;<%= camp.price %>/night</li>
          
        </ul>
        <% if (currentUser && camp.author.equals(currentUser)) { %>
        <div class="card-body">
          <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-info">Edit</a>
          <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
        </div>
        <% } %>
      </div>
</div>
<div class="col-6">
  <% if (currentUser) { %>
  <h3>Leave a review</h3>
  <form action="/campgrounds/<%=camp._id%>/review" method="POST" class="mb-3 validate" novalidate>
    <!-- <div class="mb-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" class="form-range" id="rating" min="1" max="5" name="review[rating]" required>
    </div> -->
    <fieldset class="starability-basic mt-3">
      <!-- <legend>First rating:</legend> -->
      <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" id="body" cols="50" rows="3" name="review[body]" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    <button class="btn btn-success">Submit</button>
  </form>
  <% } %>
  <% for (let reviews of camp.reviews) { %>
  <div class="mb-3 card">
    <div class="card-body">
      <h5 class="card-title"> <%= reviews.author.username%></h5>
      <p class="starability-result" data-rating="<%=reviews.rating%>">
          Rated: <%= reviews.rating %> stars
      </p>
      <p class="card-text">Review: <%= reviews.body %></p>
      <% if (currentUser && reviews.author.equals(currentUser)) { %>
      <form action="/campgrounds/<%= camp._id %>/review/<%= reviews._id %>?_method=DELETE" method="POST">
        <button class="btn btn-small btn-danger">Delete</button>
      </form>
      <% } %>
    </div>
  </div>
  <% } %>
</div>
</div> 

    
